<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <!-- Vertical Center Guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="193dp" />

    <!-- Header Text -->
    <TextView
        android:id="@+id/favTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OUR FAVORITE DR"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/orangeDarkMode"
        app:layout_constraintTop_toBottomOf="@+id/verticalCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Dr. Name -->
    <TextView
        android:id="@+id/drName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DR. ALI RAMMAL"
        android:textSize="22sp"
        android:textStyle="italic"
        android:textColor="@color/text_primary"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/favTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Doctor Picture -->
    <ImageView
        android:id="@+id/drImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/dr_ali"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_corners"
        android:contentDescription="Dr. Ali Rammal"
        app:layout_constraintTop_toBottomOf="@id/drName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tagline or description -->
    <TextView
        android:id="@+id/tagline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Trusted, Caring, and Truly One of a Kind."
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/drImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
